import s2
while True:
    s2.s()#工具模块菜单
    s=input("请选择希望执行的操作")
    print("您选择的操作是【%s】"%s)
    if s in ["1","2","3"]:
        if s=="1":
            s2.x()
        elif s=="2":
            s2.sa()
        elif s=="3":
            s2.sc()
    elif s=="0":
        print("欢迎再次使用")
        break

    else:
        print("您的输入不正确")



def s():
    print("*"*50)
    print("欢迎使用名片管理系统")
    print("")
    print("1.新增名片")
    print("2.显示全部")
    print("3.搜索名片")
    print(" ")
    print("0.退出系统")
    print("*"*50)
def x():
    print("新增名片")
def sa():
    print("显示所有名片")
def sc():
    print("搜索名片")
